[
    {
        "settings": [ "master" ],
        "name": "YahooLogin",
        "config": {
            "baseUrl": "http://login.yahoo.com"
        },

        "commonlib" : "./mocha-lib.js",

        "dataprovider" : {

            "Use Locator to Login" : {
                "group" : "func",
                "params" :{
                    "scenario": [
                        {
                            "page": "$$config.baseUrl$$"
                        },
                        {
                            "controller": "locator",
                            "params": {
                                "value": "#username",
                                "text": "arrowtestuser1"
                            }
                        },
                        {
                            "controller": "locator",
                            "params": {
                                "value": "#passwd",
                                "text": "123456"
                            }
                        },
                        {
                            "controller": "locator",
                            "params": {
                                "value": "#submit",
                                "click": true
                            }
                        },
                        {
                            "page": "http://finance.yahoo.com"
                        },
                        {
                            "test": "mocha-test.js"
                        }
                    ]
                }
            }
        }
    },
    {
        "settings": [ "environment:development" ]
    }
]